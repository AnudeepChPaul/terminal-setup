{
  "tab_bar": {
    "show": false
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_onboarding_banner": false,
    "show_project_items": true,
    "show_user_picture": true
  },
  "outline_panel": {
    "auto_fold_dirs": true
  },
  "confirm_quit": true,
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "buffer_font_family": "Fira Code",
  "ui_font_family": "Fira Code",
  "buffer_font_fallbacks": [".SystemUIFont"],
  "soft_wrap": "editor_width",
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "git_panel": {
    "button": false,
    "default_width": 360,
    "status_style": "label_color"
  },
  "project_panel": {
    "button": false,
    "default_width": 400,
    "dock": "right",
    "entry_spacing": "standard",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": null
    },
    "show_diagnostics": "all",
    "indent_guides": {
      "show": "always"
    }
  },
  "bottom_dock_layout": "left_aligned",
  "theme": {
    "mode": "dark",
    "light": "Soothing Light",
    "dark": "Soothing Dark"
  },
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "show_edit_predictions": false,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 75
  },
  "formatter": "prettier",
  "show_completions_on_input": true,
  "restore_on_startup": "last_session",
  "inlay_hints": {
    "enabled": true,
    "show_background": false,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_other_hints": true,
    "show_parameter_hints": true
  },
  "pane_split_direction_vertical": "right",
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    },
    "cargo": null
  },
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "toml": true,
    "docker-compose": true,
    "graphql": true
  },
  "languages": {
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TSX": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JSX": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "lsp": {
    "vtsls": {
      "settings": {
        // For JavaScript:
        "javascript": {
          "preferences": {
            "importModuleSpecifier": "non-relative"
          },
          "tsserver": { "maxTsServerMemory": 16184 },
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": false
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        },
        // For TypeScript:
        "typescript": {
          "preferences": {
            "importModuleSpecifier": "non-relative"
          },
          "tsserver": { "maxTsServerMemory": 16184 },
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": false
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        }
      }
    },
    "json-language-server": {
      "settings": {
        "json": {
          "schemas": [
            {
              "fileMatch": ["*/*.luarc.json"],
              "url": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json"
            }
          ]
        }
      }
    }
  }
}
